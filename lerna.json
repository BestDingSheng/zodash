{
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "command": {
    "publish": {
      "npmClient": "npm",
      "registry": "https://registry.npmjs.org/",
      "ignoreChanges": ["*.lock"],
      "allowBranch": "master",
      "message": "chore(release): publish %s"
    },
    "bootstrap": {
      "npmClient": "cnpm",
      "npmClientArgs": ["--no-package-lock"]
    }
  }
}
